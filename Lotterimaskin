//Mine variabler
int v;
int knapp;

//Tekststrenger for deltakere
String tekst = "Vinneren er: ";
String a1 = "Per";
String a2 = "Kari";
String a3 = "Ola";
String a4 = "Laila";

void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600);   //velger baudrate
}

void loop() {
  // put your main code here, to run repeatedly:


  delay(500);     //delay p책 500ms
  if (Serial.available() > 0) {     //Sjekker om det er tilgjengelig data p책 serial kommunikasjon
    knapp = Serial.read();           //lagrer data i knapp
    if (knapp == 115) {               //hvis 's' er trykt inn.
      v = random(1, 5);   //tilfeldig tall fra 1 til 4
      if (v == 1) {
        Serial.print(tekst);      //printer ut tekst
        Serial.println(a1);       //Printer ut deltakter
      } else if (v == 2) {
        Serial.print(tekst);
        Serial.println(a2);
      } else if (v == 3) {
        Serial.print(tekst);
        Serial.println(a3);
      } else if (v == 4) {
        Serial.print(tekst);
        Serial.println(a4);
      }
      knapp = 0;            //Setter knapp=0 for 책 forhindre if loop
    } else if (knapp != 115) { //Gir tilbakemelding til brukeren om hva som skal trykkes.
      Serial.println("Trekk en vinner ved 책 bruke bokstaven 's'");
    }
  }


}
